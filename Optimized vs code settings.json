{
    // Performance Tweaks
    "editor.smoothScrolling": false,
    "editor.minimap.enabled": false,
    "editor.renderWhitespace": "none",
    "editor.largeFileOptimizations": true,
    "editor.wordWrap": "on",

    // Enable Inline Suggestions
    "editor.inlineSuggest.enabled": true,

    // GitHub Copilot Core
    "github.copilot.enable": true,
    "github.copilot.editor.enableAutoCompletions": true,
    "github.copilot.advanced": {
        "experimentalCompletionCache": true,
        "enableFastAutoTrigger": true
    },

    // Copilot Chat Settings
    "github.copilot.chat.enable": true,
    "github.copilot.chat.agentMode": "inline",
    "github.copilot.chat.experimental.autoAgent": false,
    "github.copilot.chat.suggestOnType": false,

    // VS Code Performance Tweaks
    "files.autoSave": "onFocusChange",
    "files.watcherExclude": {
        "**/node_modules/**": true,
        "**/target/**": true,
        "**/.git/**": true
    },
    "search.followSymlinks": false,
    "telemetry.enableTelemetry": false,
    "telemetry.enableCrashReporter": false,

    // Extensions Auto Update
    "extensions.autoUpdate": true,
    "extensions.autoCheckUpdates": true,

    // Reduce UI Overhead
    "workbench.startupEditor": "none",
    "explorer.autoReveal": false,

    // Omnisharp & C# Performance
    "dotnet.server.useOmnisharp": true,
    "omnisharp.useModernNet": true,
    "omnisharp.enableRoslynAnalyzers": false,
    "omnisharp.enableEditorConfigSupport": false,
    "omnisharp.enableImportCompletion": false
}
    // Reduce Unnecessary UI Load
    "workbench.startupEditor": "none",
    "explorer.autoReveal": false,

    // C# & .NET Related Tweaks
    "dotnet.server.useOmnisharp": true,
    "omnisharp.useModernNet": true,
    "omnisharp.enableRoslynAnalyzers": false,
    "omnisharp.enableEditorConfigSupport": false,
    "omnisharp.enableImportCompletion": false,

    // Disable heavy features when not needed
    "breadcrumbs.enabled": false,
    "problems.showCurrentInStatus": false
}
